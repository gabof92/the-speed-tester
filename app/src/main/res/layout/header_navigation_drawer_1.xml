<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_small" />
    <!--<com.gfsoftware.thespeedtester.kbv.KenBurnsView
        android:id="@+id/ken_burns_drawer_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/splash_content_layout">

        <ImageView
            android:visibility="gone"
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <com.bit45.thespeedtester.font.RobotoTextView
            android:visibility="gone"
            android:id="@+id/email"
            style="@style/TextViewAppearance.Title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/app_name"
            android:textColor="@color/material_light_green_500"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
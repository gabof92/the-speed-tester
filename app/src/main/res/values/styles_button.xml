<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button related styles -->
    <style name="ButtonStyle" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:layout_margin">@dimen/button_style_margin</item>
        <item name="android:padding">@dimen/button_style_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="typeface">robotoMedium</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonStyle.RaisedEmpty" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/selector_background_empty</item>
        <item name="android:textColor">@drawable/selector_text_empty</item>
    </style>

    <style name="ButtonStyle.Main" parent="@style/ButtonStyle">
        <item name="typeface">robotoBlack</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/button_main_text</item>
        <item name="android:minWidth">@dimen/button_main_min_width</item>
    </style>

    <style name="ButtonStyle.Alt" parent="@style/ButtonStyle">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:background">@drawable/selector_background_alt</item>
    </style>

    <style name="ButtonStyle.Alt.Config" parent="@style/ButtonStyle.Alt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/button_alt_text</item>
        <item name="android:minWidth">@dimen/button_alt_min_width</item>
        <item name="android:autoText">false</item>
    </style>

    <style name="ButtonStyle.Main.Start" parent="@style/ButtonStyle.Main">
        <item name="android:background">@drawable/selector_background_start</item>
    </style>

    <style name="ButtonStyle.Main.Cancel" parent="@style/ButtonStyle.Main">
        <item name="android:background">@drawable/selector_background_cancel</item>
    </style>

    <style name="ButtonStyle.RaisedFull" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/selector_background_full</item>
        <item name="android:textColor">@drawable/selector_text_full</item>
    </style>
    <!-- Button related styles end here -->

</resources>